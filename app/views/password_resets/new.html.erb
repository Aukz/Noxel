<% provide(:button_text, "") %>

<div class="row mt-5">
  <div class="col-md-8 mx-auto">
    <h3>パスワードの変更</h3>

    <%= form_with(scope: :password_reset, url: password_resets_path, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "送信", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
