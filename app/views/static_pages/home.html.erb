<% provide(:title,"Noxel")%>
<div class="row mt-5">
  <div class="col-8 mx-auto">
    <div class="mx-auto" style="height: auto;">
        <h1 class="text-white text-center mb-2">Welcome to Noxel</h1>
        <p class="text-white text-center">Noxelは作家とイラストレーターを繋げるサービスです</p>
        <div class="row">
          <div class="col-md-6 text-right">
            <%= link_to "新規作成", new_user_path, class: "w-50 mx-auto btn btn-success text-white"%>
          </div>
          <div class="col-md-6 text-left">
            <%= link_to "ログイン", login_path, class: "w-50 mx-auto btn btn-danger text-white "%>
          </div>
        </div>
      </div>
      </div>
  </div>


<section class="accordion text-center">
  <p id="btn" class="text-white mt-4 btn btn-info">ブックマークランキング</p>
  <div  id="box"class="row mt-5">
    <div class="col-md-8 mx-auto card">
        <div class=" pt-3 w-100">
          <%= render "/novels/rank" ,ranks: @ranks %>
        </div>
    </div>
  </div>
</section>

<script type="text/javascript">
  $(function(){
      $('#btn').on('click', function(){
         $('#box').slideToggle('fast');
      });
  });
</script>
