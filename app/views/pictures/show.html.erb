  <div class="row">
    <div class="mx-auto">
      <h3 class="mt-3">
        <%= @picture.title %>
      </h3>
    </div>
  </div>
  <div class="text-right">
      <div class="mt-5">
        <h5 class="mr-5">投稿者： <%= link_to @user.name, user_path(@user.id) %></h5>
      </div>
  </div>


  <div class="row, mt-5">
        <%=image_tag  @picture.main, class: "d-block mx-auto" if @picture.picture.attached?%>
  </div>

  <%  if correct_user_picture(@user) %>
    |<%= link_to '編集',  edit_picture_path(@picture) %> |
    <%= link_to "削除", picture_path(@picture),method: :delete,
                                              data: {confirm: "本当によろしいですか？"}%>|
  <% end  %>
