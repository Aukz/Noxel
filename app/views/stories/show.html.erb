<div class="row">
  <div class="mx-auto">
    <h3 class="mt-3">
      <%= @story.title %>
    </h3>
  </div>
</div>
<div class="row">
  <div class="mx-auto">
    <div class="mt-5">
      <%= @story.content %>
    </div>
  </div>
</div>






<%  if current_user.story?(@novel) %>
  |<%= link_to '編集', edit_story_path(@story) %> |
  <%= link_to "削除", story_path(@story),method: :delete,
                                            data: {confirm: "本当によろしいですか？"}%>|
<% end  %>
<%= link_to "一覧", @novel %>
