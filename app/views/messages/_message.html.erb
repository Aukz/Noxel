<% if message.sender_id == current_user.id %>

<div class="card border border-0">
  <div class="text-right">
    <span class="pr-3"><%= message.content %></span>
  </div>
</div>
<% else %>
  <div class="card border border-0">
    <div class="text-left">
      <span class="pl-3"><%= message.content %></span>
    </div>
  </div>
<% end %>
