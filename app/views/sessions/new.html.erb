<% provide(:title, "ログイン") %>


  <div class="row pt-3">
    <div class="col-md-8 mx-auto">
      <h3>ログイン</h3>
      <button type="button" class="mt-3 mb-4 btn btn-light btn-sm" id="test_account" name="button" onClick="demo_account();">ここをクリックすればデモアカウントでログインできます。</button>
    <%= form_with(scope: :session, url: login_path, local: true,html: {name: "form_demo"}) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control',id: "email_field" %>

      <%= f.label :password %>
      <%= link_to "(パスワードを忘れた場合)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control',id: "password_field" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
        <span>次回からログイン状態にする</span>
      <% end %>

      <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>

    <p>新規作成はこちら！ <%= link_to "新規作成", new_user_path %></p>
  </div>
</div>
<script type="text/javascript">
  function demo_account(){
    document.getElementById("email_field").value = "test1234@example.com";
    document.getElementById("password_field").value = "testtest";
    document.form_demo.submit();
  }
</script>
