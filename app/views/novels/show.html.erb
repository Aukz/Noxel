<div class="row">
  <div class="mx-auto">
    <h3 class="mt-3">
      <%= @novel.title %>
    </h3>
  </div>
</div>
<div class="text-right">
    <div class="mt-5">
      <h5 class="mr-5">作者： <%= link_to @user.name, user_path(@user.id) %></h5>
    </div>
    <div class="float-right mr-5 mt-2"><%= render "bookmark_form" %></div>
</div>
<div class="row">
  <div class="mx-auto card p-3 border-0 w-75">
    <p class="">
      <%= @novel.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="mx-auto">

    <% if @novel.stories.any?  %>
      <ol class="novels">
        <% @stories.each_with_index do |story,i| %>
          <%= render story,i: i+1 %>
        <% end %>
      </ol>
        <%= paginate @stories%>
    <% else %>
      <p class="mt-5">まだ話が投稿されてません。『話を書く』から書いてみよう</p>
    <% end  %>
  </div>
</div>




    <%  if logged_in? && right_user %>
      <%= link_to "話を書く", new_story_path(novel_id: @novel.id) %>|
      <%= link_to '小説の編集', edit_novel_path(@novel) %> |
      <%= link_to "小説削除",novel_path(@novel),method: :delete,
                                                data: {confirm: "本当によろしいですか？"}%>|
    <% end  %>
