<div class="row">
  <div class="mx-auto">
    <h3 class="mt-3">
      <%= @novel.title %>
    </h3>
  </div>
</div>
<div class="text-right">
    <div class="mt-5">
      <h5><%= link_to @user.name, user_path(@user.id) %></h5>
    </div>
</div>
<div class="row">
  <div class="mx-auto">
    <p class="mt-3">
      <%= @novel.description %>
    </p>
  </div>
</div>

<div class="row">
  <div class="mx-auto">

    <% if @novel.stories.any?  %>
      <ol class="novels">
        <%= render @stories %>
      </ol>
        <%= paginate @stories%>
    <% else %>
      <p class="mt-5">まだ話が投稿されてません。『話を書く』から書いてみよう</p>
    <% end  %>
  </div>
</div>




    <%  if right_user %>
      <%= link_to "話を書く", new_story_path(novel_id: @novel.id) %>|
      <%= link_to '小説の編集', edit_novel_path(@novel) %> |
      <%= link_to "小説削除",novel_path(@novel),method: :delete,
                                                data: {confirm: "本当によろしいですか？"}%>|
    <% end  %>
